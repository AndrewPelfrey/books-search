{
  "compilerOptions": {
    "outDir": "dist", // Output directory for compiled JS
    "rootDir": "src", // Source files are in the 'src' folder
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"], // Only include files in 'src'
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist folder
}
